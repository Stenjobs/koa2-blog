
{
    "apps": [{
        "name": "koa2-blog",
        "script": "bin/www",
        "cwd": ".",
        "watch": true,
        "ignore_watch": [
            "node_modules",
            "logs"
        ],
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "instances": 4,
        "exec_mode": "cluster",
        "max_memory_restart": "1G",
        "env": {
            "NODE_ENV": "production"
        }
    }]
}


